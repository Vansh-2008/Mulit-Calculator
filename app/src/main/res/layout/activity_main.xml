<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".MainActivity"
    android:background="@drawable/calc_bg3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/what_you_want_to_do_in_all_in_one_calculator"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/vol_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:backgroundTint="@color/vol_btn"
            android:text="@string/volume"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/area_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:backgroundTint="@color/area_btn"
            android:text="@string/area"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/surface_area_btn"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:backgroundTint="@color/surface_btn"
            android:text="@string/surface_area"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/maths_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:backgroundTint="@color/maths_btn"
            android:text="@string/maths"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bmi_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:backgroundTint="@color/bmi_btn"
            android:text="@string/bmi"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#A1E3D8"
            android:text="@string/more_features_coming_soon"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="50dp"
            android:text="@string/by_vansh"
            android:textColor="@color/purple_700"
            android:textSize="@dimen/eighteen_size"
            android:textStyle="italic" />


    </LinearLayout>
</RelativeLayout>