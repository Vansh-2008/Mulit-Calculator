<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolCube"
    android:orientation="vertical"
    android:background="#FAF0D7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sphere_volume_calculator"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="37sp"
        android:layout_marginTop="@dimen/eighteen_size"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/vol_sphere_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHint="@color/hintText"
        android:hint="@string/enter_radius"
        android:layout_marginTop="120dp"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:importantForAutofill="no"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vol_sphere_calc_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="@string/calculate"
        android:background="@color/bmi_calc"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vol_sphere_clr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="@string/vol_clear"
        android:background="@color/bmi_calc"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/sphere_vol_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        tools:text="Result.."
        android:layout_marginTop="380dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/ic_back_black"
        android:contentDescription="@string/to_go_back" />

</RelativeLayout>